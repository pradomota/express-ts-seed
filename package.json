{
  "name": "express-ts-seed",
  "version": "0.0.0",
  "description": "Seed proyect for Express apps with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/pradomota/express-ts-seed.git"
  },
  "author": "Carlos del Prado Mota",
  "license": "MIT",
  "private": false,
  "scripts-info": {
    "info": "List available scripts",
    "build": "Builds the application, by cleaning and compiling TypesScript into Javascript",
    "compile": "Just compiles your code",
    "dev": "Watch codebase, trigger compile when source code changes",
    "lint": "Check coding guidelines conformance",
    "security": "Check if your dependencies are secure"
  },
  "scripts": {
    "info": "npm-scripts-info",
    "build": "npm run clean && npm run compile",
    "clean": "shx rm -fR ./dist",
    "compile": "tsc && cpx './src/**/*.pug' dist && cpx './src/**/*.{png,js,css,json}' dist",
    "dev": "npm run build && npm run watch",
    "lint": "tslint './src/**/*.ts'",
    "prepublish": "npm run build",
    "security": "nsp check",
    "watch": "npm-run-all --parallel watch:*",
    "watch:views": "cpx -w './src/**/*.pug' dist",
    "watch:statics": "cpx -w './src/**/*.{png,js,css,json}' dist",
    "watch:ts": "tsc -w",
    "watch:js": "nodemon --watch dist --exec 'cross-env LOGOPS_LEVEL=debug NODE_ENV=development DEBUG=latch-totp-express:* node dist/www'",
    "start": "NODE_ENV=production node dist/www",
    "debug": "node --debug-brk dist/www -c",
    "webdebug": "node --debug-brk dist/www",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "body-parser": "~1.17.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.3",
    "dotenv": "^4.0.0",
    "express": "~4.15.2",
    "i18n": "^0.8.3",
    "morgan": "~1.8.1",
    "pug": "~2.0.0-beta11",
    "serve-favicon": "~2.4.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/cookie-parser": "^1.4.0",
    "@types/debug": "0.0.29",
    "@types/dotenv": "^4.0.0",
    "@types/express": "^4.0.36",
    "@types/i18n": "^0.8.0",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.17",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "npm-scripts-info": "^0.3.6",
    "shx": "^0.2.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2"
  }
}
